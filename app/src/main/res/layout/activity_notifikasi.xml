<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".NotifikasiActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="109dp"
        android:background="@drawable/bghome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center_horizontal"
            android:text="Notifikasi"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

        <TextView
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="99dp"
            android:gravity="center_vertical"
            android:textSize="17sp"
            android:background="@color/biru2"
            android:paddingLeft="15dp"
            android:text="Raden memberikan komentar pada postinganmu: “semangat mas!”" />

        <TextView
            android:id="@+id/editText3"
            android:layout_width="match_parent"
            android:layout_height="99dp"
            android:gravity="center_vertical"
            android:textSize="17sp"
            android:layout_marginTop="15dp"
            android:background="@color/biru_langit"
            android:paddingLeft="15dp"
            android:text="Ilham memberikan komentar pada postinganmu: “sabar ya.. insyaallah pasti sembuh””" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="99dp"
            android:gravity="center_vertical"
            android:textSize="17sp"
            android:layout_marginTop="15dp"
            android:background="@color/biru2"
            android:paddingLeft="15dp"
            android:text="Hadi memberikan komentar pada postingan “Jangan lupa ya.. jaga kesehatan dan pola makan”" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="99dp"
            android:gravity="center_vertical"
            android:textSize="17sp"
            android:layout_marginTop="15dp"
            android:background="@color/biru_langit"
            android:paddingLeft="15dp"
            android:text="Inggri memberikan komentar pada postingan “Alhamdulillah sekarang saya sudah sembuh”" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>